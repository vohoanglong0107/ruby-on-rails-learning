<% provide(:title, t(".title")) %>
<% provide(:button_text, t(".submit_button")) %>
<h1><%= t ".prompt" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form" %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="https://gravatar.com/emails" target="_blank" rel="noopener">
        <%= t(".change") %>
      </a>
    </div>
  </div>
</div>
